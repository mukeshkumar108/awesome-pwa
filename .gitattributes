# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files we want to always be normalized and converted
*.js     text
*.jsx    text
*.ts     text
*.tsx    text
*.css    text
*.scss   text
*.html   text
*.json   text
*.md     text
*.yml    text
*.yaml   text
*.sh     text eol=lf
*.md     text eol=lf
*.json   text eol=lf

# Denote all files that are truly binary and should not be modified
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.svg    text
*.ttf    binary
*.woff   binary
*.woff2  binary

# Prevent linguist from classifying minified files as source
*.min.js linguist-generated=true
*.min.css linguist-generated=true
